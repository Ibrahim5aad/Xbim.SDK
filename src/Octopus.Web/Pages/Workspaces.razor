@page "/workspaces"
@inject IWorkspacesService WorkspacesService
@inject NavigationManager Navigation

<PageTitle>Workspaces</PageTitle>

<h1>Workspaces</h1>

<div class="row mb-4">
    <div class="col">
        <div class="card">
            <div class="card-header">Create New Workspace</div>
            <div class="card-body">
                <EditForm Model="@newWorkspace" OnValidSubmit="CreateWorkspace">
                    <DataAnnotationsValidator />
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Name</label>
                            <InputText class="form-control" @bind-Value="newWorkspace.Name" placeholder="Workspace name" />
                            <ValidationMessage For="@(() => newWorkspace.Name)" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Description</label>
                            <InputText class="form-control" @bind-Value="newWorkspace.Description" placeholder="Optional description" />
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100" disabled="@creating">
                                @if (creating)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                }
                                Create
                            </button>
                        </div>
                    </div>
                </EditForm>
                @if (createError != null)
                {
                    <div class="alert alert-danger mt-2">@createError</div>
                }
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">Your Workspaces</div>
    <div class="card-body">
        @if (loading)
        {
            <p><em>Loading...</em></p>
        }
        else if (loadError != null)
        {
            <div class="alert alert-warning">@loadError</div>
        }
        else if (workspaces == null || !workspaces.Any())
        {
            <p>No workspaces found. Create one above to get started.</p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ws in workspaces)
                    {
                        <tr>
                            <td>@ws.Name</td>
                            <td>@ws.Description</td>
                            <td>@(ws.CreatedAt?.LocalDateTime.ToString("g") ?? "-")</td>
                            <td>
                                <a href="@($"projects?workspaceId={ws.Id}")" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-folder"></i> Projects
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (totalPages > 1)
            {
                <nav>
                    <ul class="pagination">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="() => LoadPageAsync(currentPage - 1)">Previous</button>
                        </li>
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            var pageNum = i;
                            <li class="page-item @(currentPage == pageNum ? "active" : "")">
                                <button class="page-link" @onclick="() => LoadPageAsync(pageNum)">@pageNum</button>
                            </li>
                        }
                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <button class="page-link" @onclick="() => LoadPageAsync(currentPage + 1)">Next</button>
                        </li>
                    </ul>
                </nav>
            }
        }
    </div>
</div>

@code {
    private List<WorkspaceDto>? workspaces;
    private bool loading = true;
    private string? loadError;
    private int currentPage = 1;
    private int totalPages = 1;
    private const int PageSize = 10;

    private CreateWorkspaceRequest newWorkspace = new();
    private bool creating = false;
    private string? createError;

    protected override async Task OnInitializedAsync()
    {
        await LoadPageAsync(1);
    }

    private async Task LoadPageAsync(int targetPage)
    {
        if (targetPage < 1 || (targetPage > totalPages && totalPages > 0)) return;

        loading = true;
        loadError = null;

        try
        {
            var result = await WorkspacesService.ListAsync(targetPage, PageSize);
            workspaces = result.Items?.ToList() ?? new List<WorkspaceDto>();
            currentPage = result.Page ?? 1;
            totalPages = (int)Math.Ceiling((double)(result.TotalCount ?? 0) / PageSize);
        }
        catch (Exception ex)
        {
            loadError = $"Failed to load workspaces: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private async Task CreateWorkspace()
    {
        if (string.IsNullOrWhiteSpace(newWorkspace.Name)) return;

        creating = true;
        createError = null;

        try
        {
            await WorkspacesService.CreateAsync(newWorkspace);
            newWorkspace = new CreateWorkspaceRequest();
            await LoadPageAsync(1);
        }
        catch (Exception ex)
        {
            createError = $"Failed to create workspace: {ex.Message}";
        }
        finally
        {
            creating = false;
        }
    }
}
